<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Set your desired background color -->
            <corners android:radius="10dp" /> <!-- Set the radius to control the amount of rounding -->
        </shape>
    </item>

    <!-- Frame -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp"
    >
        <shape android:shape="rectangle">
            <stroke
                android:color="#FFFFFF"
                android:width="4dp"
                />
            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>